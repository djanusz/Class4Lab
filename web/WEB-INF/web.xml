<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>AreaCalculatorController</servlet-name>
        <servlet-class>AreaCalculatorController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RectangleAreaCalculatorController</servlet-name>
        <servlet-class>RectangleAreaCalculatorController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CircleAreaCalculatorController</servlet-name>
        <servlet-class>CircleAreaCalculatorController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RightTriangleCalculatorController</servlet-name>
        <servlet-class>RightTriangleCalculatorController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AreaCalculatorController</servlet-name>
        <url-pattern>/AreaCalculatorController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RectangleAreaCalculatorController</servlet-name>
        <url-pattern>/RectangleAreaCalculatorController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CircleAreaCalculatorController</servlet-name>
        <url-pattern>/CircleAreaCalculatorController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RightTriangleCalculatorController</servlet-name>
        <url-pattern>/RightTriangleCalculatorController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>calculator.jsp</welcome-file>
    </welcome-file-list>
</web-app>
